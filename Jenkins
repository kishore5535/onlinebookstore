pipeline 
{
    agent any

    stages 
    {
        stage('Build') 
        {
            steps 
            {
                echo 'Hello Build'
            }
        }
    }
    
    {
        stage('Test') 
        {
            steps 
            {
                echo 'Test World'
            }
        }
    }
    
    {
        stage('Deploy') 
        {
            steps 
            {
                echo 'Deploy World'
            }
        }
    }
    
    post 
    {
        always
        {
            emailext body: 'The Pipeline is successfull.', subject: 'Pipeline Status', to: 'kishore.may06@gmail.com'
        }
    }
}
